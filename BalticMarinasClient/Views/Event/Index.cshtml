@model IEnumerable<BalticMarinasClient.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Text</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.EventsList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>@item.Text</td>
            </tr>
        }
    </tbody>
</table>
