@model IEnumerable<BalticMarinasClient.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<body>
    <h2 class="title">Events</h2>

    <table id="events-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Location</th>
                <th>Period</th>
                <th>Description</th>
                <th>Details</th>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <th>Delete</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.EventsList)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Location</td>
                    <td>@item.Period</td>
                    <td>@item.Description</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = item.EventId }, new { @class = "btn blue-button btn-large buttons-with-70proc-width" })</td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <td>@Html.ActionLink("Delete", "Delete", new { id = item.EventId }, new { @class = "btn red-button btn-large buttons-with-70proc-width" })</td>
                    }
                </tr>
            }
        </tbody>
    </table>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <div>
            <div style="display: inline-block; margin-right: 10px">@Html.ActionLink("Add Event", "Create", "Event", new { @class = "btn blue-button btn-large buttons-with-70proc-width" })</div>
        </div>
    }
</body>
