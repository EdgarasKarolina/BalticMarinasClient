
<body>
    <table id="marina-details">
        <tr>
            <th>Marina:</th>
            <td>@ViewBag.MarinasList.MarinaName</td>
        </tr>
        <tr>
            <th>Phone Number:</th>
            <td>@ViewBag.MarinasList.Phone</td>
        </tr>
        <tr>
            <th>Max. Depth:</th>
            <td>@ViewBag.MarinasList.Depth</td>
        </tr>
        <tr>
            <th>Location:</th>
            <td>@ViewBag.MarinasList.CityName ,@ViewBag.MarinasList.Country</td>
        </tr>
        <tr>
            <th>Amount of places:</th>
            <td>@ViewBag.MarinasList.TotalBerths</td>
        </tr>
        <tr>
            <th>Shower:</th>
            @if (@ViewBag.MarinasList.IsShower == 1)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
        </tr>
        <tr>
            <th>Toilet:</th>
            @if (@ViewBag.MarinasList.IsToilet == 1)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
        </tr>
        <tr>
            <th>Internet:</th>
            @if (@ViewBag.MarinasList.IsInternet == 1)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
        </tr>
    </table>
    <div>@Html.ActionLink("Available Berths", "Index", "Berth", new { id = @ViewBag.MarinasList.MarinaId }, new { @class = "btn blue-button btn-large buttons-with-70proc-width" })</div>
    <div>@Html.ActionLink("Add Comment", "Create", "Comment", new { MarinaId = @ViewBag.MarinasList.MarinaId }, new { @class = "btn blue-button btn-large buttons-with-70proc-width" })</div>


    @foreach (var item in ViewBag.ItemsList)
    {
        <ul class="comment-list">
            <li><h3>@item.UserName</h3></li>
            <li>@item.TimePlaced</li>
            <li>@item.Body</li>
        </ul>
    }
</body>