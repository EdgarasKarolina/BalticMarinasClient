@model BalticMarinasClient.Models.SoldItem

<body>
    <h2 class="title">Sell new item</h2>

    @using (Html.BeginForm("Create", "SellBuy", FormMethod.Post))
    {
        <p>
            <div class="row">
                <div class="col-md-9" style="display:inline-block">
                    <div class="row">
                        <div class="col-md-10">
                            <br />
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "account-input", placeholder = "Title" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            <br />
                            @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "account-input", placeholder = "Category" } })
                            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                            <br />
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "account-input", placeholder = "Price" } })
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            <br />
                            @Html.EditorFor(model => model.MadeYear, new { htmlAttributes = new { @class = "account-input", placeholder = "Year made" } })
                            @Html.ValidationMessageFor(model => model.MadeYear, "", new { @class = "text-danger" })
                            <br />
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "account-input", placeholder = "Description" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            <br />
                            <button style="width:40%; margin-top:15px" type="submit" value="Filter" class="btn blue-button btn-block"> <span class="glyphicon glyphicon-pencil"></span> @Html.DisplayName("Create advert")</button>
                        </div>
                        <div class="col-md-2">
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </p>
    }
</body>

