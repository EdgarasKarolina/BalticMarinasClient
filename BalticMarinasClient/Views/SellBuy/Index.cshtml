@model IEnumerable<BalticMarinasClient.Models.SoldItem>

<body>
    <h2 class="title">Sold Items</h2>

    <table id="sold-items-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Price</th>
                <th>Year</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ItemsList)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Category</td>
                    <td>@item.Price</td>
                    <td>@item.MadeYear</td>
                    <td>@item.Description</td>
                    <td>@Html.ActionLink("", "Details", new { id = item.SoldItemId }, new { @class = "btn blue-button btn-large buttons-with-70proc-width glyphicon glyphicon-stats" })</td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <td>@Html.ActionLink("", "Delete", new { id = item.SoldItemId }, new { @class = "btn red-button btn-large buttons-with-70proc-width glyphicon glyphicon-trash" })</td>
                    }

                </tr>
            }
        </tbody>
    </table>
    @if (User.Identity.IsAuthenticated)
    {
        <div>
            <div style="display: inline-block; margin-right: 10px">@Html.ActionLink("Add Advert", "Create", "SellBuy", new { @class = "btn blue-button btn-large buttons-with-70proc-width" })</div>
        </div>
    }
</body>
