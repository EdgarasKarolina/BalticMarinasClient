@model IEnumerable<BalticMarinasClient.Models.SoldItem>

@{
    ViewData["Title"] = "View";
}

<body>
    <h2>Sold Items</h2>
    @Html.ActionLink("New", "Create", "SellBuy", new { @class = "btn blue-button btn-large buttons-with-70proc-width" })

    <table id="sold-items-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Price</th>
                <th>Year</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ItemsList)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Category</td>
                    <td>@item.Price</td>
                    <td>@item.MadeYear</td>
                    <td>@item.Description</td>
                    <td>@Html.ActionLink("More Information", "Details", new { id = item.SoldItemId }, new { @class = "btn blue-button btn-large buttons-with-70proc-width" })</td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <td>@Html.ActionLink("Delete", "Delete", new { id = item.SoldItemId }, new { @class = "btn btn-danger btn-large buttons-with-70proc-width" })</td>
                    }

                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("More Information", "Details", new { @class = "btn blue-button btn-large buttons-with-70proc-width" })
</body>
