
@{
    ViewData["Title"] = "Available";
}

<h2>Available Berths</h2>

<table class="table">
    <thead>
        <tr>
            <th>BerthId</th>
            <th>MarinaId</th>
            <th>Price</th>
            <th>Information</th>
            <th>Reservation</th>
            <th>Test</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.BerthsList)
        {
        <tr>
            <td>@item.BerthId</td>
            <td>@item.MarinaId</td>
            <td>@item.Price</td>
            <td>@Html.ActionLink("More Information", "Details", new { marinaId = item.MarinaId, berthId = item.BerthId }, new { @class = "btn btn-primary btn-large buttons-with-70proc-width" })</td>
            <td>@Html.ActionLink("Booking", "Reserve", "Reservation", new { berthId = item.BerthId, customerId = 1, checkIn = ViewBag.CheckIn, checkOut = ViewBag.CheckOut }, new { @class = "btn btn-primary btn-large buttons-with-70proc-width" })</td>
            <td>@Html.ActionLink("Booking", "PersonalInformation", "Reservation", new { berthId = item.BerthId, customerId = 1, checkIn = ViewBag.CheckIn, checkOut = ViewBag.CheckOut }, new { @class = "btn btn-primary btn-large buttons-with-70proc-width" })</td>
        </tr>
        }
    </tbody>
</table>

